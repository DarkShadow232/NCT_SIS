<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- NCT UNIVERSITY ENHANCED COLOR SYSTEM                                                 -->
    <!-- Primary: #112250 (Dark Navy Blue) | Accent: #cb810d (Gold/Orange)                   -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Primary Colors - Navy Blue Spectrum -->
    <Color x:Key="PrimaryColor">#112250</Color>
    <Color x:Key="PrimaryDarkColor">#0A1535</Color>
    <Color x:Key="PrimaryLightColor">#1A3470</Color>
    <Color x:Key="PrimaryExtraLightColor">#2A4A8F</Color>
    
    <!-- Accent Colors - Gold Spectrum -->
    <Color x:Key="AccentColor">#cb810d</Color>
    <Color x:Key="AccentDarkColor">#A66A0A</Color>
    <Color x:Key="AccentLightColor">#E09A1F</Color>
    <Color x:Key="AccentGlowColor">#FFB833</Color>
    
    <!-- Background Colors - Modern Light Theme -->
    <Color x:Key="BackgroundColor">#F8FAFC</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    <Color x:Key="HoverColor">#F1F5F9</Color>
    <Color x:Key="ActiveColor">#E2E8F0</Color>
    
    <!-- Text Colors - High Contrast -->
    <Color x:Key="TextPrimaryColor">#0F172A</Color>
    <Color x:Key="TextSecondaryColor">#64748B</Color>
    <Color x:Key="TextMutedColor">#94A3B8</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextOnAccentColor">#FFFFFF</Color>
    
    <!-- Status Colors - Vibrant & Accessible -->
    <Color x:Key="SuccessColor">#059669</Color>
    <Color x:Key="SuccessLightColor">#D1FAE5</Color>
    <Color x:Key="WarningColor">#D97706</Color>
    <Color x:Key="WarningLightColor">#FEF3C7</Color>
    <Color x:Key="ErrorColor">#DC2626</Color>
    <Color x:Key="ErrorLightColor">#FEE2E2</Color>
    <Color x:Key="InfoColor">#2563EB</Color>
    <Color x:Key="InfoLightColor">#DBEAFE</Color>
    
    <!-- Grade Colors - Academic Performance -->
    <Color x:Key="GradeDistinctionColor">#059669</Color>
    <Color x:Key="GradeMeritColor">#2563EB</Color>
    <Color x:Key="GradePassColor">#D97706</Color>
    <Color x:Key="GradeFailColor">#DC2626</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderColor">#E2E8F0</Color>
    <Color x:Key="BorderLightColor">#F1F5F9</Color>
    <Color x:Key="BorderFocusColor">#cb810d</Color>
    
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- SOLID COLOR BRUSHES                                                                  -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryExtraLightBrush" Color="{StaticResource PrimaryExtraLightColor}"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>
    <SolidColorBrush x:Key="AccentGlowBrush" Color="{StaticResource AccentGlowColor}"/>
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="ActiveBrush" Color="{StaticResource ActiveColor}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="TextOnAccentBrush" Color="{StaticResource TextOnAccentColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="{StaticResource SuccessLightColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="{StaticResource ErrorLightColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="{StaticResource InfoLightColor}"/>
    
    <SolidColorBrush x:Key="GradeDistinctionBrush" Color="{StaticResource GradeDistinctionColor}"/>
    <SolidColorBrush x:Key="GradeMeritBrush" Color="{StaticResource GradeMeritColor}"/>
    <SolidColorBrush x:Key="GradePassBrush" Color="{StaticResource GradePassColor}"/>
    <SolidColorBrush x:Key="GradeFailBrush" Color="{StaticResource GradeFailColor}"/>
    
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource BorderFocusColor}"/>
    
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- GRADIENT BRUSHES                                                                     -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    
    <!-- Sidebar Gradient - Deep Navy -->
    <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#112250" Offset="0"/>
        <GradientStop Color="#0A1535" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Header Gradient - Navy Horizontal -->
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#112250" Offset="0"/>
        <GradientStop Color="#1A3470" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Accent Button Gradient -->
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E09A1F" Offset="0"/>
        <GradientStop Color="#cb810d" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Success Gradient -->
    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#10B981" Offset="0"/>
        <GradientStop Color="#059669" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Card Hover Gradient -->
    <LinearGradientBrush x:Key="CardHoverGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#F8FAFC" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Stat Card Gradients -->
    <LinearGradientBrush x:Key="StatBlueGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#DBEAFE" Offset="0"/>
        <GradientStop Color="#BFDBFE" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="StatGreenGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#D1FAE5" Offset="0"/>
        <GradientStop Color="#A7F3D0" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="StatAmberGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FEF3C7" Offset="0"/>
        <GradientStop Color="#FDE68A" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="StatRedGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FEE2E2" Offset="0"/>
        <GradientStop Color="#FECACA" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    <!-- SHADOW EFFECTS                                                                       -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════ -->
    
    <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="4" 
                      Direction="270" Color="#0F172A" Opacity="0.08"/>
    
    <DropShadowEffect x:Key="CardShadowHover" BlurRadius="30" ShadowDepth="8" 
                      Direction="270" Color="#0F172A" Opacity="0.12"/>
    
    <DropShadowEffect x:Key="ButtonShadow" BlurRadius="10" ShadowDepth="2" 
                      Direction="270" Color="#0F172A" Opacity="0.15"/>
    
    <DropShadowEffect x:Key="DropdownShadow" BlurRadius="16" ShadowDepth="4" 
                      Direction="270" Color="#0F172A" Opacity="0.12"/>
    
    <DropShadowEffect x:Key="AccentGlow" BlurRadius="20" ShadowDepth="0" 
                      Direction="0" Color="#cb810d" Opacity="0.3"/>
    
</ResourceDictionary>
