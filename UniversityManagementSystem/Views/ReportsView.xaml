<UserControl x:Class="UniversityManagementSystem.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Refresh -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,20" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="Performance Analytics" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBlock Text="Comprehensive reports and statistics overview" 
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="↻ Refresh Data" Style="{StaticResource BaseButtonStyle}"
                        Command="{Binding RefreshCommand}"/>
            </Grid>
        </Border>
        
        <!-- Stats Cards Row -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
            <!-- Grade Distribution -->
            <Border Style="{StaticResource StatCardStyle}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Grade Distribution" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="10" Height="10" CornerRadius="2" Background="{StaticResource GradeDistinctionBrush}"/>
                        <TextBlock Grid.Column="1" Text="Distinction" Foreground="{StaticResource TextSecondaryBrush}" 
                                   Margin="8,0,0,0" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="{Binding GradeDistribution.DistinctionCount}" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="10" Height="10" CornerRadius="2" Background="{StaticResource GradeMeritBrush}"/>
                        <TextBlock Grid.Column="1" Text="Merit" Foreground="{StaticResource TextSecondaryBrush}" 
                                   Margin="8,0,0,0" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="{Binding GradeDistribution.MeritCount}" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="10" Height="10" CornerRadius="2" Background="{StaticResource GradePassBrush}"/>
                        <TextBlock Grid.Column="1" Text="Pass" Foreground="{StaticResource TextSecondaryBrush}" 
                                   Margin="8,0,0,0" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="{Binding GradeDistribution.PassCount}" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Width="10" Height="10" CornerRadius="2" Background="{StaticResource GradeFailBrush}"/>
                        <TextBlock Grid.Column="1" Text="Not Achieved" Foreground="{StaticResource TextSecondaryBrush}" 
                                   Margin="8,0,0,0" FontSize="12"/>
                        <TextBlock Grid.Column="2" Text="{Binding GradeDistribution.FailCount}" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Students by Year -->
            <Border Style="{StaticResource StatCardStyle}" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="Students by Year" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Year 1" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="{Binding Year1Students}" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Year 2" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="{Binding Year2Students}" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Year 3" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="{Binding Year3Students}" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Year 4" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="{Binding Year4Students}" 
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Leniency Stats -->
            <Border Style="{StaticResource StatCardStyle}" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="Leniency Algorithm" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="{Binding LeniencyStats.LeniencyApplied}" 
                               FontSize="36" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Students Benefited" Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="12" Margin="0,4,0,12"/>
                    
                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="4" Padding="8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rate: " Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding LeniencyStats.LeniencyRate, StringFormat={}{0:F1}%}" 
                                       Foreground="{StaticResource SuccessBrush}" FontWeight="SemiBold" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Total Graded -->
            <Border Style="{StaticResource StatCardStyle}" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Grading Summary" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,16"/>
                    
                    <TextBlock Text="{Binding GradeDistribution.TotalGraded}" 
                               FontSize="36" FontWeight="Bold" 
                               Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Total Grades Recorded" Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>
        
        <!-- Bottom Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Course Performance -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Course Performance" Style="{StaticResource SectionTitleStyle}" 
                               Margin="0,0,0,16"/>
                    
                    <DataGrid Grid.Row="1" ItemsSource="{Binding CoursePerformances}"
                              Style="{StaticResource ModernDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                              CellStyle="{StaticResource ModernDataGridCellStyle}"
                              MaxHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding CourseCode}" Width="80"/>
                            <DataGridTextColumn Header="Course" Binding="{Binding CourseName}" Width="*"/>
                            <DataGridTextColumn Header="Avg Score" Binding="{Binding AverageScore, StringFormat={}{0:F1}}" Width="80"/>
                            <DataGridTextColumn Header="Pass Rate" Binding="{Binding PassRate, StringFormat={}{0:F0}%}" Width="80"/>
                            <DataGridTextColumn Header="Students" Binding="{Binding StudentCount}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Top Students -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Top Performing Students" Style="{StaticResource SectionTitleStyle}" 
                               Margin="0,0,0,16"/>
                    
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding TopStudents}" MaxHeight="300">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}" 
                                        CornerRadius="8" Padding="16,12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18" 
                                                Background="{StaticResource PrimaryBrush}" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding StudentName[0]}" 
                                                       FontSize="14" FontWeight="Bold" Foreground="White"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding StudentName}" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold"/>
                                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}" FontSize="11">
                                                <Run Text="Year"/>
                                                <Run Text="{Binding YearLevel}"/>
                                                <Run Text=" • "/>
                                                <Run Text="{Binding CoursesCompleted}"/>
                                                <Run Text=" courses"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding AverageScore, StringFormat={}{0:F1}}" 
                                                       FontSize="20" FontWeight="Bold" 
                                                       Foreground="{StaticResource SuccessBrush}"
                                                       HorizontalAlignment="Right"/>
                                            <TextBlock Text="avg score" FontSize="10" 
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>


