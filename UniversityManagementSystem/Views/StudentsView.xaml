<UserControl x:Class="UniversityManagementSystem.Views.StudentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Student List -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Toolbar -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="+ Add Student" Style="{StaticResource BaseButtonStyle}" 
                                Command="{Binding AddCommand}" Margin="0,0,10,0"/>
                        <Button Content="Edit" Style="{StaticResource PrimaryButtonStyle}" 
                                Command="{Binding EditCommand}" Margin="0,0,10,0"/>
                        <Button Content="Delete" Background="#DC2626" Foreground="White" 
                                Style="{StaticResource BaseButtonStyle}" 
                                Command="{Binding DeleteCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Search and Filter -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" Margin="0,0,10,0"
                              SelectedValue="{Binding FilterYearLevel}"
                              SelectedValuePath="Tag"
                              Background="White"
                              Foreground="{StaticResource TextPrimaryBrush}">
                        <ComboBoxItem Content="All Years" Tag="{x:Null}"/>
                        <ComboBoxItem Content="Year 1" Tag="1"/>
                        <ComboBoxItem Content="Year 2" Tag="2"/>
                        <ComboBoxItem Content="Year 3" Tag="3"/>
                        <ComboBoxItem Content="Year 4" Tag="4"/>
                    </ComboBox>
                    
                    <ComboBox Grid.Column="2" Margin="0,0,10,0"
                              ItemsSource="{Binding Departments}"
                              SelectedValue="{Binding FilterDepartmentId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              Background="White"
                              Foreground="{StaticResource TextPrimaryBrush}"/>
                    
                    <Button Grid.Column="3" Content="Clear" Style="{StaticResource IconButtonStyle}"
                            Command="{Binding ClearFilterCommand}" Padding="12,8"/>
                </Grid>
            </Border>
            
            <!-- Students DataGrid -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="0">
                <DataGrid ItemsSource="{Binding Students}" 
                          SelectedItem="{Binding SelectedStudent}"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                          CellStyle="{StaticResource ModernDataGridCellStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Student ID" Binding="{Binding StudentId}" Width="100"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Department" Binding="{Binding Department.Name}" Width="130"/>
                        <DataGridTextColumn Header="Year" Binding="{Binding YearLevelDisplay}" Width="60"/>
                        <DataGridTextColumn Header="Section" Binding="{Binding Section.Name}" Width="80"/>
                        <DataGridTemplateColumn Header="Status" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left"
                                            Background="{Binding IsActive, Converter={StaticResource BoolToStatusBrushConverter}}">
                                        <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}" 
                                                   FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
        
        <!-- Right Panel - Student Form -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Form Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Student Details" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBlock Text="View and edit student information" 
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Form Fields -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel IsEnabled="{Binding IsEditing}">
                        <!-- Name Field -->
                        <TextBlock Text="Full Name *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding FormName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding NameError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,12"
                                   Visibility="{Binding NameError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Email Field -->
                        <TextBlock Text="Email Address *" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding FormEmail, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding EmailError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,12"
                                   Visibility="{Binding EmailError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Student ID Field -->
                        <TextBlock Text="Student ID (auto-generated if empty)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding FormStudentId, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding StudentIdError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,12"
                                   Visibility="{Binding StudentIdError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Phone Field -->
                        <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding FormPhone, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding PhoneError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,12"
                                   Visibility="{Binding PhoneError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Department Field -->
                        <TextBlock Text="Department *" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Departments}" 
                                  SelectedValue="{Binding FormDepartmentId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  Background="White"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Padding="12,10" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding DepartmentError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,12"
                                   Visibility="{Binding DepartmentError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Year Level -->
                        <TextBlock Text="Year Level" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding YearLevels}" 
                                  SelectedItem="{Binding FormYearLevel}"
                                  Background="White"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Padding="12,10" Margin="0,0,0,16"/>
                        
                        <!-- Section -->
                        <TextBlock Text="Section" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Sections}" 
                                  SelectedValue="{Binding FormSectionId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  Background="White"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Padding="12,10" Margin="0,0,0,16"/>
                        
                        <CheckBox Content="Active Student" 
                                  IsChecked="{Binding FormIsActive}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,16"/>
                        
                        <!-- Info box for new students -->
                        <Border Background="#FEF3C7" CornerRadius="8" Padding="12" 
                                Visibility="{Binding IsAdding, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="ðŸ’¡ Fees will be automatically calculated based on the selected department." 
                                       FontSize="12" Foreground="#92400E" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Form Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel" Style="{StaticResource IconButtonStyle}" 
                            Command="{Binding CancelCommand}" 
                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                            Padding="16,10" Margin="0,0,10,0"/>
                    <Button Content="Save Changes" Style="{StaticResource BaseButtonStyle}" 
                            Command="{Binding SaveCommand}"
                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
