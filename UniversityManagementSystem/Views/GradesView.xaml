<UserControl x:Class="UniversityManagementSystem.Views.GradesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Grades List -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Toolbar -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="+ Add Grade" Style="{StaticResource BaseButtonStyle}" 
                                Command="{Binding AddCommand}" Margin="0,0,10,0"/>
                        <Button Content="Edit" Style="{StaticResource PrimaryButtonStyle}" 
                                Command="{Binding EditCommand}" Margin="0,0,10,0"/>
                        <Button Content="Delete" Background="#DC2626" Foreground="White" 
                                Style="{StaticResource BaseButtonStyle}" 
                                Command="{Binding DeleteCommand}"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" Content="â†» Recalculate All" 
                            Style="{StaticResource IconButtonStyle}"
                            Command="{Binding RecalculateAllCommand}" Padding="12,8"/>
                </Grid>
            </Border>
            
            <!-- Filters -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox Grid.Column="0" 
                              ItemsSource="{Binding Students}"
                              SelectedValue="{Binding FilterStudentId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              Background="White"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding Courses}"
                              SelectedValue="{Binding FilterCourseId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="Name"
                              Background="White"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,10,0"/>
                    
                    <Button Grid.Column="2" Content="Clear" Style="{StaticResource IconButtonStyle}"
                            Command="{Binding ClearFilterCommand}" Padding="12,8"/>
                </Grid>
            </Border>
            
            <!-- Grades DataGrid -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="0">
                <DataGrid ItemsSource="{Binding Grades}" 
                          SelectedItem="{Binding SelectedGrade}"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                          CellStyle="{StaticResource ModernDataGridCellStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Student" Binding="{Binding Student.Name}" Width="*"/>
                        <DataGridTextColumn Header="Course" Binding="{Binding Course.Code}" Width="80"/>
                        <DataGridTextColumn Header="A1" Binding="{Binding Assignment1, StringFormat={}{0:F0}}" Width="50"/>
                        <DataGridTextColumn Header="A2" Binding="{Binding Assignment2, StringFormat={}{0:F0}}" Width="50"/>
                        <DataGridTextColumn Header="CW" Binding="{Binding CourseWork, StringFormat={}{0:F0}}" Width="50"/>
                        <DataGridTextColumn Header="Fin" Binding="{Binding FinalExam, StringFormat={}{0:F0}}" Width="50"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalScore, StringFormat={}{0:F1}}" Width="60"/>
                        <DataGridTemplateColumn Header="Grade" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center"
                                            Background="{Binding SymbolicGrade, Converter={StaticResource GradeToColorConverter}}">
                                        <TextBlock Text="{Binding SymbolicGrade}" 
                                                   FontSize="11" FontWeight="Bold" Foreground="White"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
        
        <!-- Right Panel - Grade Form -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Form Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Grade Entry" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBlock Text="Enter assessment scores (0-100)" 
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Form Fields -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <StackPanel IsEnabled="{Binding IsAdding}">
                            <TextBlock Text="Student" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Students}" 
                                      SelectedValue="{Binding FormStudentId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      Background="White"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      Padding="12,10" Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Course" Style="{StaticResource LabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Courses}" 
                                      SelectedValue="{Binding FormCourseId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      Background="White"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      Padding="12,10" Margin="0,0,0,16"/>
                        </StackPanel>
                        
                        <StackPanel IsEnabled="{Binding IsEditing}">
                            <!-- Grading Info Card -->
                            <Border Background="#EEF2FF" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“Š Grading Formula (PDF Requirements)" FontWeight="SemiBold" 
                                               Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>
                                    <TextBlock Text="Practical: A1 (20%) + A2 (30%) + CW (20%) + Final (30%)" 
                                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                    <TextBlock Text="Theoretical: A1 (20%) + A2 (20%) + CW (60%)" 
                                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,2,0,0"/>
                                    <TextBlock Text="Excellent: â‰¥85% | Very Good: â‰¥75% | Good: â‰¥65% | Pass: â‰¥60%" 
                                               Foreground="{StaticResource TextMutedBrush}" FontSize="11" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Assignment 1 -->
                            <TextBlock Text="Assignment 1 (0-100)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding FormAssignment1, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Assignment1Error}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,12"
                                       Visibility="{Binding Assignment1Error, Converter={StaticResource NullToVisibilityConverter}}"/>
                            
                            <!-- Assignment 2 -->
                            <TextBlock Text="Assignment 2 (0-100)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding FormAssignment2, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Assignment2Error}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,12"
                                       Visibility="{Binding Assignment2Error, Converter={StaticResource NullToVisibilityConverter}}"/>
                            
                            <!-- Course Work (NEW) -->
                            <TextBlock Text="Course Work - CW (0-100)" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding FormCourseWork, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding CourseWorkError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,12"
                                       Visibility="{Binding CourseWorkError, Converter={StaticResource NullToVisibilityConverter}}"/>
                            
                            <!-- Final Exam -->
                            <TextBlock Text="Final Exam (0-100) - Required for Practical courses" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding FormFinalExam, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"
                                     ToolTip="Required for Practical courses. Leave empty for Theoretical courses."/>
                            <TextBlock Text="{Binding FinalExamError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,20"
                                       Visibility="{Binding FinalExamError, Converter={StaticResource NullToVisibilityConverter}}"/>
                            
                            <!-- Calculated Result Preview -->
                            <Border Background="#F0FDF4" CornerRadius="8" Padding="16"
                                    Visibility="{Binding FormTotalScore, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Text="âœ“ Calculated Result" FontWeight="SemiBold" 
                                               Foreground="#166534" Margin="0,0,0,12"/>
                                    
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Total Score" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                            <TextBlock Text="{Binding FormTotalScore, StringFormat={}{0:F1}}" 
                                                       FontSize="28" FontWeight="Bold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                        
                                        <Border Grid.Column="1" CornerRadius="8" Padding="16,8" 
                                                VerticalAlignment="Center"
                                                Background="{Binding FormSymbolicGrade, Converter={StaticResource GradeToColorConverter}}">
                                            <TextBlock Text="{Binding FormSymbolicGrade}" 
                                                       FontSize="20" FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    
                                    <Border Grid.Row="2" Margin="0,12,0,0" Padding="8" CornerRadius="4"
                                            Background="{StaticResource AccentBrush}"
                                            Visibility="{Binding FormLeniencyApplied, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="âœ“ Leniency Applied (Improvement Trend)" 
                                                   FontSize="11" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Form Actions -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel" Style="{StaticResource IconButtonStyle}" 
                            Command="{Binding CancelCommand}" 
                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                            Padding="16,10" Margin="0,0,10,0"/>
                    <Button Content="Save Grade" Style="{StaticResource BaseButtonStyle}" 
                            Command="{Binding SaveCommand}"
                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
