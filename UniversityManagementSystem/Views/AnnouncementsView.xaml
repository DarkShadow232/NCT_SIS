<UserControl x:Class="UniversityManagementSystem.Views.AnnouncementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Announcements List -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="ðŸ“¢ Announcements" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Manage university announcements and notifications" 
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>
                
                <DataGrid Grid.Row="1" ItemsSource="{Binding Announcements}" 
                          SelectedItem="{Binding SelectedAnnouncement}"
                          Style="{StaticResource ModernDataGridStyle}"
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                        <DataGridTemplateColumn Header="Priority" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#10B981"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Important">
                                                        <Setter Property="Background" Value="#F59E0B"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Priority}" Value="Urgent">
                                                        <Setter Property="Background" Value="#EF4444"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding PriorityDisplay}" FontSize="11" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Published" Binding="{Binding PublishDateDisplay}" Width="100"/>
                        <DataGridTextColumn Header="Expires" Binding="{Binding ExpiryDateDisplay}" Width="100"/>
                        <DataGridTemplateColumn Header="Status" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center"
                                            Background="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}">
                                        <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}" 
                                                   FontSize="11" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Announcement Form -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="ðŸ“" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Create Announcement"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                            <Setter Property="Text" Value="Edit Announcement"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Error Message -->
                    <Border Background="#FEE2E2" CornerRadius="6" Padding="12" Margin="0,0,0,16"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#DC2626" TextWrapping="Wrap"/>
                    </Border>
                    
                    <!-- Title -->
                    <TextBlock Text="Title" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Content -->
                    <TextBlock Text="Content" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}" 
                             TextWrapping="Wrap" AcceptsReturn="True"
                             Height="120" Margin="0,0,0,16"/>
                    
                    <!-- Priority -->
                    <TextBlock Text="Priority" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Priorities}" SelectedItem="{Binding Priority}"
                              Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Publish Date -->
                    <TextBlock Text="Publish Date" Style="{StaticResource FormLabelStyle}"/>
                    <DatePicker SelectedDate="{Binding PublishDate}" Margin="0,0,0,16"/>
                    
                    <!-- Expiry Date -->
                    <TextBlock Text="Expiry Date (Optional)" Style="{StaticResource FormLabelStyle}"/>
                    <DatePicker SelectedDate="{Binding ExpiryDate}" Margin="0,0,0,16"/>
                    
                    <!-- Active Status -->
                    <CheckBox Content="Active" IsChecked="{Binding IsActive}" 
                              Margin="0,0,0,20" FontSize="14"/>
                    
                    <!-- Action Buttons -->
                    <StackPanel>
                        <Button Content="Create Announcement" Command="{Binding AddCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,10"
                                Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        
                        <Button Content="Update Announcement" Command="{Binding UpdateCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,10"
                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <Button Content="Delete Announcement" Command="{Binding DeleteCommand}"
                                Style="{StaticResource DangerButtonStyle}" Margin="0,0,0,10"
                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <Button Content="Clear Form" Command="{Binding ClearCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

