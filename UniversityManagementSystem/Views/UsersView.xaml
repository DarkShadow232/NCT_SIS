<UserControl x:Class="UniversityManagementSystem.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>
        
        <!-- Users List -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,20,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="ðŸ‘¤ User Accounts" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Manage system user accounts and permissions" 
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>
                
                <DataGrid Grid.Row="1" ItemsSource="{Binding Users}" 
                          SelectedItem="{Binding SelectedUser}"
                          Style="{StaticResource ModernDataGridStyle}"
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="150"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding RoleDisplay}" Width="100"/>
                        <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="*"/>
                        <DataGridTemplateColumn Header="Status" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Center"
                                            Background="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}">
                                        <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}" 
                                                   FontSize="11" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Last Login" Binding="{Binding LastLogin, StringFormat={}{0:MMM dd, yyyy HH:mm}}" Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- User Form -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="âž•" FontSize="18" Margin="0,0,8,0"/>
                        <TextBlock FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Add New User"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                            <Setter Property="Text" Value="Edit User"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Error Message -->
                    <Border Background="#FEE2E2" CornerRadius="6" Padding="12" Margin="0,0,0,16"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#DC2626" TextWrapping="Wrap"/>
                    </Border>
                    
                    <!-- Username -->
                    <TextBlock Text="Username" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Password -->
                    <TextBlock Style="{StaticResource FormLabelStyle}">
                        <TextBlock.Text>
                            <Binding Path="IsEditing">
                                <Binding.Converter>
                                    <local:BoolToStringConverter xmlns:local="clr-namespace:UniversityManagementSystem.Converters"
                                                                  TrueValue="New Password (leave empty to keep)" 
                                                                  FalseValue="Password"/>
                                </Binding.Converter>
                            </Binding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Confirm Password -->
                    <TextBlock Text="Confirm Password" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Role -->
                    <TextBlock Text="Role" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}"
                              Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,0,16"/>
                    
                    <!-- Link to Student (for Student role) -->
                    <StackPanel Visibility="{Binding SelectedRole, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Student}">
                        <TextBlock Text="Link to Student Record" Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox ItemsSource="{Binding AvailableStudents}" 
                                  SelectedItem="{Binding LinkedStudent}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,0,16"/>
                    </StackPanel>
                    
                    <!-- Link to Instructor (for Instructor role) -->
                    <StackPanel Visibility="{Binding SelectedRole, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Instructor}">
                        <TextBlock Text="Link to Instructor Record" Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox ItemsSource="{Binding AvailableInstructors}" 
                                  SelectedItem="{Binding LinkedInstructor}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,0,16"/>
                    </StackPanel>
                    
                    <!-- Active Status -->
                    <CheckBox Content="Active Account" IsChecked="{Binding IsActive}" 
                              Margin="0,0,0,20" FontSize="14"/>
                    
                    <!-- Action Buttons -->
                    <StackPanel>
                        <Button Content="Add User" Command="{Binding AddCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,10"
                                Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        
                        <Button Content="Update User" Command="{Binding UpdateCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,0,10"
                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <Button Content="Reset Password" Command="{Binding ResetPasswordCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10"
                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <Button Content="Delete User" Command="{Binding DeleteCommand}"
                                Style="{StaticResource DangerButtonStyle}" Margin="0,0,0,10"
                                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <Button Content="Clear Form" Command="{Binding ClearCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

