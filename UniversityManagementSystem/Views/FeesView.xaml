<UserControl x:Class="UniversityManagementSystem.Views.FeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:UniversityManagementSystem.Models"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Summary Cards -->
        <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,20">
            <!-- Total Fees -->
            <Border Style="{StaticResource StatCardStyle}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Total Fees" Style="{StaticResource StatLabelStyle}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding TotalFees, StringFormat={}{0:N0} EGP}" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- Collected -->
            <Border Style="{StaticResource StatCardStyle}" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="Collected" Style="{StaticResource StatLabelStyle}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding TotalCollected, StringFormat={}{0:N0} EGP}" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource SuccessBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- Pending -->
            <Border Style="{StaticResource StatCardStyle}" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="Pending" Style="{StaticResource StatLabelStyle}" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding TotalPending, StringFormat={}{0:N0} EGP}" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource WarningBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- Paid Students -->
            <Border Style="{StaticResource StatCardStyle}" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Paid / Pending" Style="{StaticResource StatLabelStyle}" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PaidCount}" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource SuccessBrush}"/>
                        <TextBlock Text=" / " FontSize="28" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding PendingCount}" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource WarningBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </UniformGrid>
        
        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="ðŸ’³ Record Payment" Style="{StaticResource BaseButtonStyle}" 
                            Command="{Binding RecordPaymentCommand}" Margin="0,0,10,0"/>
                    <Button Content="âœ“ Mark as Paid" Style="{StaticResource PrimaryButtonStyle}" 
                            Command="{Binding MarkAsPaidCommand}" Margin="0,0,10,0"/>
                    <Button Content="Generate Fees" Style="{StaticResource IconButtonStyle}" 
                            Command="{Binding GenerateFeesCommand}"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="â†» Refresh" Style="{StaticResource IconButtonStyle}"
                        Command="{Binding RefreshCommand}"/>
            </Grid>
        </Border>
        
        <!-- Filters -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,10,0"/>
                
                <ComboBox Grid.Column="1" 
                          ItemsSource="{Binding Departments}"
                          SelectedValue="{Binding FilterDepartmentId}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Name"
                          Background="White"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          Margin="0,0,10,0"/>
                
                <ComboBox Grid.Column="2" 
                          ItemsSource="{Binding StatusOptions}"
                          SelectedItem="{Binding FilterStatus}"
                          Background="White"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          Margin="0,0,10,0"/>
                
                <Button Grid.Column="3" Content="Clear" Style="{StaticResource IconButtonStyle}"
                        Command="{Binding ClearFilterCommand}" Padding="12,8"/>
            </Grid>
        </Border>
        
        <!-- Fees DataGrid -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="0">
            <DataGrid ItemsSource="{Binding StudentFees}" 
                      SelectedItem="{Binding SelectedFee}"
                      Style="{StaticResource ModernDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                      CellStyle="{StaticResource ModernDataGridCellStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Student ID" Binding="{Binding Student.StudentId}" Width="110"/>
                    <DataGridTextColumn Header="Student Name" Binding="{Binding Student.Name}" Width="*"/>
                    <DataGridTextColumn Header="Department" Binding="{Binding Student.Department.Name}" Width="140"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding AcademicYear}" Width="60"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat={}{0:N0}}" Width="100"/>
                    <DataGridTextColumn Header="Paid" Binding="{Binding AmountPaid, StringFormat={}{0:N0}}" Width="100"/>
                    <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat={}{0:N0}}" Width="100"/>
                    <DataGridTemplateColumn Header="Status" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4" Padding="10,4" HorizontalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:PaymentStatus.Paid}">
                                                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:PaymentStatus.Partial}">
                                                    <Setter Property="Background" Value="{StaticResource InfoBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:PaymentStatus.Overdue}">
                                                    <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding StatusDisplay}" 
                                               FontSize="11" FontWeight="SemiBold" Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>

