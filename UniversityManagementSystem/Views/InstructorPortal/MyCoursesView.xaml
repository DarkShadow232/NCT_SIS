<UserControl x:Class="UniversityManagementSystem.Views.InstructorPortal.MyCoursesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:UniversityManagementSystem.ViewModels.InstructorPortal">
    
    <UserControl.DataContext>
        <viewmodels:MyCoursesViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="20">
            <StackPanel>
                <TextBlock Text="My Courses"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Manage your assigned courses and view student grades"
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Course Cards -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,16">
            <ItemsControl ItemsSource="{Binding Courses}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" 
                                Padding="20" 
                                Margin="0,0,16,0"
                                Width="260"
                                Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick"
                                              Command="{Binding DataContext.SelectCourseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"/>
                            </Border.InputBindings>
                            
                            <StackPanel>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="5" Padding="10,5" HorizontalAlignment="Left" Margin="0,0,0,12">
                                    <TextBlock Text="{Binding CourseCode}" FontWeight="Bold" Foreground="White" FontSize="12"/>
                                </Border>
                                
                                <TextBlock Text="{Binding CourseName}" 
                                           FontWeight="SemiBold" 
                                           FontSize="16" 
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           TextWrapping="Wrap"
                                           MaxHeight="48"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,15">
                                    <TextBlock Text="Year " Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                    <TextBlock Text="{Binding YearLevel}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                    <TextBlock Text=" â€¢ " Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                    <TextBlock Text="{Binding Semester}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                </StackPanel>
                                
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding TotalStudents}" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Students" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding AverageScore, StringFormat={}{0:F1}%}" FontSize="22" FontWeight="Bold" Foreground="#4CAF50"/>
                                        <TextBlock Text="Avg Score" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <Border Background="{StaticResource BackgroundBrush}" 
                                        CornerRadius="8" 
                                        Padding="12"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding GradedStudents}" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Graded" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding PendingGrades}" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Pending" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Course Details / Grade List -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Margin="20,15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ‘¨â€ðŸŽ“" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Students in " FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="{Binding SelectedCourse.CourseName}" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="{Binding SelectedCourse.TotalStudents}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Text=" students enrolled" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
                
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding CourseGrades}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="White"
                          AlternatingRowBackground="{StaticResource BackgroundBrush}"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Foreground="{StaticResource TextPrimaryBrush}">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Student ID" Binding="{Binding Student.StudentId}" Width="120"/>
                        <DataGridTextColumn Header="Student Name" Binding="{Binding Student.Name}" Width="*"/>
                        <DataGridTextColumn Header="Assignment 1" Binding="{Binding Assignment1, StringFormat={}{0:F1}}" Width="100"/>
                        <DataGridTextColumn Header="Assignment 2" Binding="{Binding Assignment2, StringFormat={}{0:F1}}" Width="100"/>
                        <DataGridTextColumn Header="Final Exam" Binding="{Binding FinalExam, StringFormat={}{0:F1}}" Width="100"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalScore, StringFormat={}{0:F1}%}" Width="80"/>
                        <DataGridTemplateColumn Header="Grade" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource AccentBrush}" CornerRadius="5" Padding="10,5" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SymbolicGrade}" Foreground="White" FontWeight="Bold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

