<UserControl x:Class="UniversityManagementSystem.Views.StudentPortal.StudentDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:UniversityManagementSystem.ViewModels.StudentPortal">
    
    <UserControl.DataContext>
        <viewmodels:StudentDashboardViewModel />
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header Card -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding WelcomeMessage}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="{Binding DepartmentInfo}" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text=" â€¢ " FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding YearInfo}" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text=" â€¢ Section: " FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Text="{Binding SectionInfo}" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="{StaticResource AccentBrush}" CornerRadius="8" Padding="15,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“…" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding CurrentDate}" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Courses -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ“š" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TotalCourses}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Enrolled Courses" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Completed Grades -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,8,0" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#E8F5E9" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                            <TextBlock Text="âœ“" FontSize="24" Foreground="#4CAF50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CompletedGrades}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Completed Grades" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- GPA -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="8,0,8,0" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FFF3E0" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ“Š" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding GPA, StringFormat={}{0:F2}}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="Current GPA" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Balance Due -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="8,0,0,0" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#FFEBEE" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ’°" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding BalanceDue, StringFormat=OMR {0:N2}}" FontSize="22" FontWeight="Bold" Foreground="#DC2626"/>
                            <TextBlock Text="Balance Due" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Main Content -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Recent Grades -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,16,0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Recent Grades" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding RecentGrades}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundBrush}" 
                                                CornerRadius="8" 
                                                Padding="15" 
                                                Margin="0,0,0,10"
                                                BorderBrush="{StaticResource BorderBrush}"
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Course.Name}" 
                                                               FontWeight="SemiBold" 
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Course.Code}" 
                                                               FontSize="12" 
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding TotalScore, StringFormat={}{0:F1}%}"
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,20,0"/>
                                                
                                                <Border Grid.Column="2" 
                                                        Background="{StaticResource AccentBrush}" 
                                                        CornerRadius="5" 
                                                        Padding="12,6">
                                                    <TextBlock Text="{Binding SymbolicGrade}" 
                                                               FontWeight="Bold" 
                                                               Foreground="White"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <TextBlock Grid.Row="1"
                                   Text="No recent grades available"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding RecentGrades.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
                    </Grid>
                </Border>
                
                <!-- Announcements -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“¢" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Announcements" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Announcements}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundBrush}" 
                                                CornerRadius="8" 
                                                Padding="12" 
                                                Margin="0,0,0,10"
                                                BorderBrush="{StaticResource BorderBrush}"
                                                BorderThickness="1">
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Title}" 
                                                               FontWeight="SemiBold" 
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <Border Grid.Column="1" 
                                                            CornerRadius="4" 
                                                            Padding="6,3"
                                                            Visibility="{Binding Priority, Converter={StaticResource EnumToVisibilityConverter}}">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Priority}" Value="Important">
                                                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Priority}" Value="Urgent">
                                                                        <Setter Property="Background" Value="#DC2626"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding PriorityDisplay}" FontSize="10" Foreground="White"/>
                                                    </Border>
                                                </Grid>
                                                <TextBlock Text="{Binding PublishDateDisplay}" 
                                                           FontSize="11" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

