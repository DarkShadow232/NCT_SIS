<UserControl x:Class="UniversityManagementSystem.Views.StudentPortal.MyScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:UniversityManagementSystem.ViewModels.StudentPortal">
    
    <UserControl.DataContext>
        <viewmodels:MyScheduleViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="My Schedule"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="{Binding CurrentSemester}" 
                               FontSize="13" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <Border Grid.Column="1" Background="{StaticResource AccentBrush}" CornerRadius="8" Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total Credits: " Foreground="White" FontSize="13"/>
                        <TextBlock Text="{Binding TotalCreditHours}" FontWeight="Bold" Foreground="White" FontSize="13"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Course Schedule -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,15">
                    <TextBlock Text="ðŸ“…" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Course Schedule" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding ScheduleItems}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="White"
                          AlternatingRowBackground="{StaticResource BackgroundBrush}"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          MaxHeight="300"
                          Foreground="{StaticResource TextPrimaryBrush}">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Code" Binding="{Binding CourseCode}" Width="100"/>
                        <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="*"/>
                        <DataGridTextColumn Header="Section" Binding="{Binding SectionName}" Width="80"/>
                        <DataGridTextColumn Header="Instructor" Binding="{Binding InstructorName}" Width="150"/>
                        <DataGridTextColumn Header="Schedule" Binding="{Binding Schedule}" Width="180"/>
                        <DataGridTextColumn Header="Year" Binding="{Binding YearLevel}" Width="60"/>
                        <DataGridTextColumn Header="Credits" Binding="{Binding CreditHours}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Upcoming Exams -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ðŸ“" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Upcoming Exams" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding UpcomingExams}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BackgroundBrush}" 
                                        CornerRadius="8" 
                                        Padding="15" 
                                        Margin="0,0,0,10"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Date -->
                                        <Border Grid.Column="0" Background="{StaticResource AccentBrush}" CornerRadius="8" Padding="15,10" Margin="0,0,15,0">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding ExamDate, StringFormat={}{0:dd}}" 
                                                           FontSize="22" 
                                                           FontWeight="Bold" 
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding ExamDate, StringFormat={}{0:MMM}}" 
                                                           FontSize="12" 
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Details -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                                       FontSize="14"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="{Binding CourseName}" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="12"/>
                                                <TextBlock Text=" (" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding CourseCode}" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="12"/>
                                                <TextBlock Text=")" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="Room: " 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="11"/>
                                                <TextBlock Text="{Binding Room}" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="11"/>
                                                <TextBlock Text=" â€¢ Duration: " 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="11"/>
                                                <TextBlock Text="{Binding DurationDisplay}" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Type Badge -->
                                        <Border Grid.Column="2" CornerRadius="5" Padding="10,5" VerticalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Type}" Value="Final">
                                                            <Setter Property="Background" Value="#DC2626"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Midterm">
                                                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Type}" Value="Practical">
                                                            <Setter Property="Background" Value="#2196F3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding TypeDisplay}" Foreground="White" FontWeight="SemiBold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <TextBlock Grid.Row="1"
                           Text="No upcoming exams scheduled"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="{Binding UpcomingExams.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

