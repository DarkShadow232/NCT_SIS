<UserControl x:Class="UniversityManagementSystem.Views.StudentPortal.StudentAnnouncementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:UniversityManagementSystem.ViewModels.StudentPortal">
    
    <UserControl.DataContext>
        <viewmodels:StudentAnnouncementsViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="20">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“¢" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Announcements"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                <TextBlock Text="Stay updated with the latest university news"
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Filter -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filter by Priority:" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <ComboBox SelectedValue="{Binding FilterPriority}"
                          ItemsSource="{Binding PriorityOptions}"
                          Width="140"
                          Padding="10"
                          Background="White"
                          Foreground="{StaticResource TextPrimaryBrush}"/>
            </StackPanel>
        </Border>
        
        <!-- Announcements List -->
        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,16,0" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,15">
                    <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="All Announcements" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15,0,15,15">
                    <ItemsControl ItemsSource="{Binding Announcements}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BackgroundBrush}" 
                                        CornerRadius="8" 
                                        Padding="15" 
                                        Margin="0,0,0,10"
                                        Cursor="Hand"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.SelectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Text="{Binding Title}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="15"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                            
                                            <Border Grid.Column="1" CornerRadius="4" Padding="8,3" Margin="10,0,0,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Important">
                                                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="Urgent">
                                                                <Setter Property="Background" Value="#DC2626"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding PriorityDisplay}" FontSize="11" Foreground="White"/>
                                            </Border>
                                        </Grid>
                                        
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Content}" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxHeight="40"
                                                   Margin="0,8,0,0"/>
                                        
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                                            <TextBlock Text="{Binding PublishDateDisplay}" 
                                                       FontSize="11" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text=" â€¢ " Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="By " FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="{Binding CreatedByName}" FontSize="11" Foreground="{StaticResource AccentBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Selected Announcement Detail -->
        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CardStyle}" Padding="20">
            <Grid>
                <StackPanel Visibility="{Binding SelectedAnnouncement, Converter={StaticResource NullToVisibilityConverter}}">
                    <Border CornerRadius="5" Padding="10,5" HorizontalAlignment="Left" Margin="0,0,0,15">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedAnnouncement.Priority}" Value="Important">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedAnnouncement.Priority}" Value="Urgent">
                                        <Setter Property="Background" Value="#DC2626"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding SelectedAnnouncement.PriorityDisplay}" Foreground="White" FontWeight="SemiBold"/>
                    </Border>
                    
                    <TextBlock Text="{Binding SelectedAnnouncement.Title}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="{Binding SelectedAnnouncement.PublishDateDisplay}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text=" â€¢ Posted by " FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding SelectedAnnouncement.CreatedByName}" 
                                   FontSize="12" 
                                   Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>
                    
                    <Border Background="{StaticResource BackgroundBrush}" 
                            CornerRadius="8" 
                            Padding="15"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding SelectedAnnouncement.Content}" 
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="14"
                                       LineHeight="24"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
                
                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding SelectedAnnouncement, Converter={StaticResource InverseNullToVisibilityConverter}}">
                    <TextBlock Text="ðŸ“„" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Select an announcement"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="to view details"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

