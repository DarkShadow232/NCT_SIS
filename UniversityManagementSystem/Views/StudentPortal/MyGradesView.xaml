<UserControl x:Class="UniversityManagementSystem.Views.StudentPortal.MyGradesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:UniversityManagementSystem.ViewModels.StudentPortal">
    
    <UserControl.DataContext>
        <viewmodels:MyGradesViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="20">
            <StackPanel>
                <TextBlock Text="My Grades"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="View your academic performance across all courses"
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="ðŸ“š" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalCourses}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Total Courses" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,8,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#E8F5E9" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="âœ“" FontSize="24" Foreground="#4CAF50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CompletedCourses}" FontSize="28" FontWeight="Bold" Foreground="#4CAF50"/>
                        <TextBlock Text="Completed" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="8,0,0,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#FFF3E0" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="ðŸ“Š" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding AverageScore, StringFormat={}{0:F1}%}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Average Score" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Filters -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,15,0"/>
                
                <TextBlock Grid.Column="1" Text="Year:" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <ComboBox Grid.Column="2"
                          SelectedValue="{Binding FilterYearLevel}"
                          ItemsSource="{Binding YearLevelOptions}"
                          Width="100"
                          Padding="10"
                          Background="White"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          Margin="0,0,15,0"/>
                
                <TextBlock Grid.Column="3" Text="Grade:" 
                           Foreground="{StaticResource TextPrimaryBrush}" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <ComboBox Grid.Column="4"
                          SelectedValue="{Binding FilterSymbolicGrade}"
                          ItemsSource="{Binding SymbolicGradeOptions}"
                          Width="100"
                          Padding="10"
                          Background="White"
                          Foreground="{StaticResource TextPrimaryBrush}"/>
            </Grid>
        </Border>
        
        <!-- Grades Table -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="0">
            <DataGrid ItemsSource="{Binding Grades}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="Transparent"
                      BorderThickness="0"
                      RowBackground="White"
                      AlternatingRowBackground="{StaticResource BackgroundBrush}"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      Foreground="{StaticResource TextPrimaryBrush}">
                
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Course Code" Binding="{Binding Course.Code}" Width="120"/>
                    <DataGridTextColumn Header="Course Name" Binding="{Binding Course.Name}" Width="*"/>
                    <DataGridTextColumn Header="Year" Binding="{Binding Course.YearLevel}" Width="60"/>
                    <DataGridTextColumn Header="Assignment 1" Binding="{Binding Assignment1, StringFormat={}{0:F1}}" Width="100"/>
                    <DataGridTextColumn Header="Assignment 2" Binding="{Binding Assignment2, StringFormat={}{0:F1}}" Width="100"/>
                    <DataGridTextColumn Header="Final Exam" Binding="{Binding FinalExam, StringFormat={}{0:F1}}" Width="100"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalScore, StringFormat={}{0:F1}%}" Width="80"/>
                    <DataGridTemplateColumn Header="Grade" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="5" Padding="10,5" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding SymbolicGrade}" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>

