<UserControl x:Class="UniversityManagementSystem.Views.StudentPortal.MyFeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:UniversityManagementSystem.ViewModels.StudentPortal">
    
    <UserControl.DataContext>
        <viewmodels:MyFeesViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="20">
            <StackPanel>
                <TextBlock Text="My Fees"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="View your tuition fees and payment history"
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,8,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="ðŸ’°" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalFees, StringFormat=OMR {0:N2}}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Total Fees" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="8,0,8,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#E8F5E9" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="âœ“" FontSize="24" Foreground="#4CAF50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalPaid, StringFormat=OMR {0:N2}}" FontSize="20" FontWeight="Bold" Foreground="#4CAF50"/>
                        <TextBlock Text="Total Paid" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="8,0,8,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#FFEBEE" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="âš " FontSize="24" Foreground="#DC2626" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding BalanceDue, StringFormat=OMR {0:N2}}" FontSize="20" FontWeight="Bold" Foreground="#DC2626"/>
                        <TextBlock Text="Balance Due" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="8,0,0,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#FFF3E0" CornerRadius="10" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="ðŸ“Š" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PaymentStatus}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Status" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Progress Bar -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="20">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Payment Progress" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding PaymentProgress, StringFormat={}{0:F1}%}" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                </Grid>
                
                <Border Background="{StaticResource BackgroundBrush}" CornerRadius="5" Height="24">
                    <Border Background="#4CAF50" 
                            CornerRadius="5" 
                            HorizontalAlignment="Left"
                            Width="{Binding PaymentProgress, Converter={StaticResource DoubleToPercentageConverter}}"/>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Fee Details -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,15">
                    <TextBlock Text="ðŸ“‹" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Fee History" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
                
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Fees}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="White"
                          AlternatingRowBackground="{StaticResource BackgroundBrush}"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Foreground="{StaticResource TextPrimaryBrush}">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Academic Year" Binding="{Binding AcademicYear}" Width="140"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=OMR {0:N2}}" Width="140"/>
                        <DataGridTextColumn Header="Paid" Binding="{Binding AmountPaid, StringFormat=OMR {0:N2}}" Width="140"/>
                        <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat=OMR {0:N2}}" Width="140"/>
                        <DataGridTemplateColumn Header="Status" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="5" Padding="10,5" HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource TextSecondaryBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Paid">
                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Partial">
                                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                        <Setter Property="Background" Value="#DC2626"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding StatusDisplay}" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Due Date" Binding="{Binding AssignedDate, StringFormat={}{0:MMM dd, yyyy}}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

