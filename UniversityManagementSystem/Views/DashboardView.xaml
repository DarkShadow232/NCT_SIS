<UserControl x:Class="UniversityManagementSystem.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- WELCOME HEADER                                                                   -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Welcome to " FontSize="28" FontWeight="Light" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="NCT University" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>
                    <TextBlock Text="New Cairo Technology University â€¢ Student Information System" 
                               FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <Border Background="{StaticResource SuccessLightBrush}" CornerRadius="6" 
                                Padding="10,6" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â—" Foreground="{StaticResource SuccessBrush}" 
                                           FontSize="8" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="System Online" FontSize="12" 
                                           Foreground="{StaticResource SuccessBrush}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                        <Border Background="{StaticResource InfoLightBrush}" CornerRadius="6" Padding="10,6">
                            <TextBlock Text="Fall Semester 2024-2025" FontSize="12" 
                                       Foreground="{StaticResource InfoBrush}" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
                
                <!-- Logo -->
                <Border Grid.Column="1" Width="100" Height="100" CornerRadius="20" 
                        VerticalAlignment="Center" Margin="30,0,0,0"
                        Background="White" Padding="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="25" ShadowDepth="0" 
                                          Color="#cb810d" Opacity="0.2"/>
                    </Border.Effect>
                    <Image Source="/logo.jpg" Stretch="Uniform"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- STATISTICS CARDS                                                                 -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Total Students Card -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="56" Height="56" CornerRadius="14" 
                            Margin="0,0,16,0" Background="{StaticResource StatBlueGradient}">
                        <TextBlock Text="ðŸ‘¥" FontSize="26" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalStudents}" FontSize="32" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Total Students" FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Active Students Card -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="56" Height="56" CornerRadius="14" 
                            Margin="0,0,16,0" Background="{StaticResource StatGreenGradient}">
                        <TextBlock Text="âœ“" FontSize="26" Foreground="#059669" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ActiveStudents}" FontSize="32" FontWeight="Bold" 
                                   Foreground="{StaticResource SuccessBrush}"/>
                        <TextBlock Text="Active Students" FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Total Courses Card -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="12,0,12,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="56" Height="56" CornerRadius="14" 
                            Margin="0,0,16,0" Background="{StaticResource StatAmberGradient}">
                        <TextBlock Text="ðŸ“š" FontSize="26" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalCourses}" FontSize="32" FontWeight="Bold" 
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Total Courses" FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Departments Card -->
            <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0" Width="56" Height="56" CornerRadius="14" 
                            Margin="0,0,16,0" Background="{StaticResource StatRedGradient}">
                        <TextBlock Text="ðŸ›ï¸" FontSize="26" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalDepartments}" FontSize="32" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Departments" FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- CHARTS AND QUICK STATS                                                           -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Grade Distribution Chart -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="ðŸ“Š" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Grade Distribution" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Chart -->
                    <lvc:PieChart Grid.Row="1" 
                                  Series="{Binding GradeSeries}"
                                  MinHeight="250"
                                  LegendPosition="Hidden"
                                  InitialRotation="-90"
                                  Margin="0,10"/>
                    
                    <!-- Legend -->
                    <Border Grid.Row="2" Background="{StaticResource BackgroundBrush}" 
                            CornerRadius="12" Padding="16" Margin="0,16,0,0">
                        <UniformGrid Columns="2" Rows="2">
                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <Border Width="18" Height="18" CornerRadius="5" 
                                        Background="#059669" Margin="0,0,10,0"/>
                                <TextBlock Text="Distinction" FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding DistinctionCount}" FontSize="13" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <Border Width="18" Height="18" CornerRadius="5" 
                                        Background="#2563EB" Margin="0,0,10,0"/>
                                <TextBlock Text="Merit" FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding MeritCount}" FontSize="13" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <Border Width="18" Height="18" CornerRadius="5" 
                                        Background="#D97706" Margin="0,0,10,0"/>
                                <TextBlock Text="Pass" FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding PassCount}" FontSize="13" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,6">
                                <Border Width="18" Height="18" CornerRadius="5" 
                                        Background="#DC2626" Margin="0,0,10,0"/>
                                <TextBlock Text="Not Achieved" FontSize="13" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding FailCount}" FontSize="13" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </UniformGrid>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Quick Stats Panel -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="âš¡" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Quick Overview" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Stats List -->
                    <StackPanel Grid.Row="1">
                        <!-- Total Sections -->
                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" 
                                Padding="16" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" 
                                        Background="{StaticResource StatBlueGradient}" Margin="0,0,14,0">
                                    <TextBlock Text="ðŸ“‹" FontSize="18" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Total Sections" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center" FontSize="14"/>
                                <TextBlock Grid.Column="2" Text="{Binding TotalSections}" 
                                           FontSize="24" FontWeight="Bold" 
                                           Foreground="{StaticResource InfoBrush}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Graded Students -->
                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" 
                                Padding="16" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" 
                                        Background="{StaticResource StatGreenGradient}" Margin="0,0,14,0">
                                    <TextBlock Text="âœ…" FontSize="18" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Graded Students" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center" FontSize="14"/>
                                <TextBlock Grid.Column="2" Text="{Binding GradedStudents}" 
                                           FontSize="24" FontWeight="Bold" 
                                           Foreground="{StaticResource SuccessBrush}"/>
                            </Grid>
                        </Border>
                        
                        <!-- Total Grades -->
                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" 
                                Padding="16" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" 
                                        Background="{StaticResource StatAmberGradient}" Margin="0,0,14,0">
                                    <TextBlock Text="ðŸ“" FontSize="18" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Total Grades" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center" FontSize="14"/>
                                <TextBlock Grid.Column="2" Text="{Binding DistinctionCount}" 
                                           FontSize="24" FontWeight="Bold" 
                                           Foreground="{StaticResource AccentBrush}"/>
                            </Grid>
                        </Border>
                        
                        <!-- System Status -->
                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12" 
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" 
                                        Background="{StaticResource StatGreenGradient}" Margin="0,0,14,0">
                                    <TextBlock Text="ðŸŒ" FontSize="18" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="System Status" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center" FontSize="14"/>
                                <Border Grid.Column="2" Background="{StaticResource SuccessBrush}" 
                                        CornerRadius="8" Padding="14,8">
                                    <TextBlock Text="â— Online" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="White"/>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
