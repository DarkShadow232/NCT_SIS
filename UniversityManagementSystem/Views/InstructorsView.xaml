<UserControl x:Class="UniversityManagementSystem.Views.InstructorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Instructors List -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Toolbar -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="+ Add Doctor" Style="{StaticResource BaseButtonStyle}" 
                                Command="{Binding AddCommand}" Margin="0,0,10,0"/>
                        <Button Content="Edit" Style="{StaticResource PrimaryButtonStyle}" 
                                Command="{Binding EditCommand}" Margin="0,0,10,0"/>
                        <Button Content="Delete" Background="#DC2626" Foreground="White" 
                                Style="{StaticResource BaseButtonStyle}" 
                                Command="{Binding DeleteCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Statistics Cards -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Total Instructors" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TotalInstructors}" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Departments Covered" Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="12" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding InstructorsByDepartment.Count}" FontSize="28" FontWeight="Bold" 
                                   Foreground="{StaticResource SuccessBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Instructors DataGrid -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="0">
                <DataGrid ItemsSource="{Binding Instructors}" 
                          SelectedItem="{Binding SelectedInstructor}"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                          CellStyle="{StaticResource ModernDataGridCellStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="120"/>
                        <DataGridTextColumn Header="Department" Binding="{Binding Department.Name}" Width="150"/>
                        <DataGridTextColumn Header="Courses" Binding="{Binding CourseInstructors.Count}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
        
        <!-- Right Panel - Instructor Form -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Form Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Doctor/Instructor Details" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBlock Text="Manage teaching staff information" 
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="13" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Form Fields -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel IsEnabled="{Binding IsEditing}">
                        <!-- Name -->
                        <TextBlock Text="Name" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding FormName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding NameError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,16"
                                   Visibility="{Binding NameError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Email -->
                        <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding FormEmail, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding EmailError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,16"
                                   Visibility="{Binding EmailError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Phone Number -->
                        <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding FormPhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding PhoneError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,16"
                                   Visibility="{Binding PhoneError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Department -->
                        <TextBlock Text="Department" Style="{StaticResource LabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Departments}" 
                                  SelectedValue="{Binding FormDepartmentId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="Name"
                                  Background="White"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Padding="12,10" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding DepartmentError}" Foreground="#DC2626" FontSize="11" Margin="0,0,0,20"
                                   Visibility="{Binding DepartmentError, Converter={StaticResource NullToVisibilityConverter}}"/>
                        
                        <!-- Info Card -->
                        <Border Background="#F0F9FF" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="ðŸ‘¨â€ðŸ« Instructor Information" FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,8"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12">
                                    <Run Text="This form manages teaching staff (doctors/instructors)."/>
                                    <LineBreak/>
                                    <Run Text="Each instructor must be assigned to a department."/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <!-- Success/Error Messages -->
                    <Border Background="#D1FAE5" CornerRadius="8" Padding="12" Margin="0,0,0,12"
                            Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding SuccessMessage}" Foreground="#065F46" FontSize="12" TextWrapping="Wrap"/>
                    </Border>
                    
                    <Border Background="#FEE2E2" CornerRadius="8" Padding="12" Margin="0,0,0,12"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#991B1B" FontSize="12" TextWrapping="Wrap"/>
                    </Border>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="Cancel" Style="{StaticResource IconButtonStyle}" 
                                Command="{Binding CancelCommand}" Margin="0,0,10,0" Padding="0,12"
                                IsEnabled="{Binding IsEditing}"/>
                        <Button Grid.Column="1" Content="Save" Background="{StaticResource SuccessBrush}" 
                                Foreground="White" Style="{StaticResource BaseButtonStyle}" 
                                Command="{Binding SaveCommand}" Padding="0,12"
                                IsEnabled="{Binding IsEditing}"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

