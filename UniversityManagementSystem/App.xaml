<Application x:Class="UniversityManagementSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:UniversityManagementSystem.Converters"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
            <conv:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
            <conv:BoolToStatusBrushConverter x:Key="BoolToStatusBrushConverter"/>
            <conv:GradeToColorConverter x:Key="GradeToColorConverter"/>
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <conv:NullToVisibilityInverseConverter x:Key="NullToVisibilityInverseConverter"/>
            <conv:DoubleToPercentageConverter x:Key="DoubleToPercentageConverter"/>
            <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <conv:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
            <conv:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            <conv:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>


